<!--index.wxml-->
<view id="resume">
  <!-- 个人信息 -->
  <view id='head'>
    <text style='font-size:180%;font-weight: bold'>王寻兵</text>
    <text style='font-size:150%;padding:3% 0;border-top:1px solid #00A982;border-bottom:2px solid #00A982;margin:3% 0'>WEB 全栈工程师</text>
    <view>
      <view id='head-info'>
        <text>男 / 1994.10</text>
        <text>山东大学 • 计算机科学与技术 • 本科</text>
        <text>5 年工作经验</text>
      </view>
      <view id='head-icon'>
        <text class="iconfont icon-weixin" bindtap='copyBlog'></text>
        <text class="iconfont icon-github" bindtap='copyGithub'></text>
        <text class="iconfont icon-youxiang" bindtap="copyMail"></text>
        <text class="iconfont icon-phone" bindtap='actionSheetTap'></text>
      </view>
    </view>
  </view>


  <view id='body'>
    <!-- 个人技能 -->
    <view>
      <view class='subtitle'>
        <view></view>
        <text>工作技能</text>
        <view></view>
      </view>

      <view>
        <text class='skill'>技能</text>
        <text class='tag'>掌握</text>

        <view class='detail' wx:for="{{technologies}}">
          <view>{{index+1}}.   {{item}}</view>
        </view>
      </view>

      <view>
        <text class='tool'>工具</text>
        <text class='tag'>熟练</text>
        <view class='detail' wx:for="{{tools}}">
          <view>{{index+1}}.    {{item}}</view>
        </view>
      </view>
    </view>

    <!-- 工作经历 -->
    <view>
      <view class='subtitle'>
        <view></view>
        <text>工作经历</text>
        <view></view>
      </view>
      <view wx:for="{{experiences}}">
        <component-work-experience companyName="{{item.companyName}}" position="{{item.position}}" dateRanges="{{item.dateRanges}}" explain="{{item.explain}}">
        </component-work-experience>
      </view>
    </view>

    <!-- 个人介绍 -->
    <view id='person-introduce'>
      <view class='subtitle'>
        <view></view>
        <text>自我介绍</text>
        <view></view>
      </view>
      <view class='introduce-content'>
        <text>{{introduce}}</text>
      </view>

    </view>
  <!-- 个人项目 -->
  <scroll-view scroll-y="true">
    <view id="project-content" wx:for="{{project}}">
      <project-item projectNum="{{item.projectNum}}" projectName="{{item.projectName}}"  projectType="{{item.projectType}}" projectDesc="{{item.projectDesc}}" skillDesc="{{item.skillDesc}}" responsibilityDesc="{{item.responsibilityDesc}}"></project-item>
    </view> 
  </scroll-view>
   <view class='project-title'>
    <view></view>
    <text>项目...</text>
    <view></view>
  </view>
  </view> 
</view>